<ul class="plan-overview">
  <% plans.each do |plan| %>
    <li>
      <div class="status">
        <%= image_tag "icons/large/#{plan.status}.png" if plan.status %>
      </div>
      <div class="details">
        <%= link_to plan.name, project_plan_path(plan.project, plan) %><br/>
        <span class="secondary">(<%= link_to plan.project.name, project_path(plan.project) %>)</span>
      </div>
    </li>
  <% end %>
</ul>
<div class="clearer"></div>
