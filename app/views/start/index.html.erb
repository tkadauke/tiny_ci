<h2>Quick links</h2>

<ul class="asterisk">
  <li><%= link_to 'Create a project', new_project_path %></li>
  <li><%= link_to 'Manage build slaves', admin_slaves_path %></li>
</ul>

<h2>Build queue</h2>

<%= render :partial => "/builds/list", :locals => { :builds => Build.pending } %>

<h2>Slave status</h2>

<ul>
  <% @slaves.each do |slave| %>
    <li>
      <p><strong><%= slave.name %></strong></p>
      <ul>
        <%= render :partial => "/builds/list", :locals => { :builds => slave.current_builds } %>
      </ul>
    </li>
  <% end %>
</ul>
