<h2>Test Run <%= report.name %></h2>

<h3>Summary</h3>

<dl>
  <dt>Total time</dt>
  <dd><%= report.summary.total_time %></dd>
  <dt>Tests</dt>
  <dd><%= report.summary.tests %></dd>
  <dt>Assertions</dt>
  <dd><%= report.summary.assertions %></dd>
  <dt>Failures</dt>
  <dd><%= report.summary.failures %></dd>
  <dt>Errors</dt>
  <dd><%= report.summary.errors %></dd>
</dl>

<h3>Details</h3>

<ul class="test-report">
  <% report.tests.sort_by { |name, test| name }.each do |name, test| %>
    <li>
      <h4><%= test.name %></h4>
      
      <table>
        <thead>
          <tr>
            <th>Test Case</th>
            <th>Status</th>
          </tr>
        </thead>
        <tbody>
          <% test.test_cases.each do |test_case| %>
            <tr class="<%= test_case.status %>">
              <td><%= test_case.name %></td>
              <td><%= test_case.status %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </li>
  <% end %>
</ul>
